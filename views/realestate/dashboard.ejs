<%- include('../layout-header', { title: 'Real Estate' }) %>

<h1>Real Estate</h1>

<div class="stats-grid">
  <div class="stat-card">
    <div class="stat-number"><%= stats.total %></div>
    <div class="stat-label">Total Properties</div>
  </div>
  <div class="stat-card">
    <div class="stat-number"><%= stats.pending %></div>
    <div class="stat-label">Pending Lookup</div>
  </div>
  <div class="stat-card">
    <div class="stat-number" style="color: #166534;"><%= stats.found %></div>
    <div class="stat-label">Found</div>
  </div>
  <div class="stat-card">
    <div class="stat-number" style="color: #991b1b;"><%= stats.not_found %></div>
    <div class="stat-label">Not Found</div>
  </div>
</div>

<h2>Upcoming Anniversaries</h2>
<% if (upcomingAnniversaries.length > 0) { %>
<div class="anniversary-preview">
  <table class="data-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Years</th>
        <th>Property</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% upcomingAnniversaries.forEach(function(a) { %>
      <tr>
        <td><%= a.first_name %> <%= a.last_name %></td>
        <td><%= a.years %> yr<%= a.years !== 1 ? 's' : '' %></td>
        <td><%= a.property_address %></td>
        <td><%= a.anniversary_date %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <a href="/realestate/anniversaries" class="btn btn-sm btn-secondary" style="margin-top:0.5rem;">View All Anniversaries</a>
</div>
<% } else { %>
<p style="color:#94a3b8; margin-bottom:1.5rem;">No upcoming anniversaries this week.
  <a href="/realestate/anniversaries">View Anniversaries</a>
</p>
<% } %>

<h2>Quick Actions</h2>
<div class="action-links">
  <a href="/realestate/lookup" class="btn btn-secondary">Manage CRMLS Data</a>
  <a href="/realestate/import-vcard" class="btn btn-upload">Import Contacts</a>
  <a href="/realestate/lookup" class="btn btn-secondary">Realist Lookup</a>
  <a href="/realestate/matching" class="btn btn-secondary">Phone Matching</a>
  <a href="/realestate/anniversaries" class="btn btn-secondary">Anniversaries</a>
</div>

<%- include('../layout-footer', { scripts: [] }) %>
