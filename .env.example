# Server
NODE_ENV=production
PORT=3000

# Data directory (SQLite db location, Docker volume mount point)
DATA_DIR=/data

# Base URL (used for absolute URLs)
BASE_URL=https://your-domain.com

# Session secret (random 64-char string)
SESSION_SECRET=change-me-to-a-random-64-character-string

# AES-256 encryption key for SMTP credentials (32 hex bytes = 64 hex chars)
ENCRYPTION_KEY=change-me-to-a-random-64-hex-character-string

# Admin seed credentials (created on first run if no admin exists)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me
